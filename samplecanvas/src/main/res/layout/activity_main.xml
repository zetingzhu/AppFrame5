<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <com.zzt.samplecanvas.sample.ViewV1
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.zzt.samplecanvas.view.D4
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <com.zzt.samplecanvas.view.D5
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <com.zzt.samplecanvas.view.D6
            android:layout_width="match_parent"
            android:layout_height="300dp" />


        <com.zzt.samplecanvas.view.Dial
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <com.zzt.samplecanvas.view.D2
            android:layout_width="300dp"
            android:layout_height="300dp" />


        <com.zzt.samplecanvas.view.D3
            android:layout_width="300dp"
            android:layout_height="300dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>